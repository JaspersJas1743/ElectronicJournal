<UserControl x:Class="ElectronicJournal.Views.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:uc="clr-namespace:ElectronicJournal.Resources.UserControls"
      mc:Ignorable="d" MaxWidth="1000" MaxHeight="650"
      d:DesignHeight="1024" d:DesignWidth="1440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.22*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.22*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.187*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.187*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="4" Grid.Column="1" Grid.Row="1" BorderBrush="{DynamicResource BorderColor}" CornerRadius="20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="272*"/>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="136*"/>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="136*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.45*"/>
                    <RowDefinition Height="0.65*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.65*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Image Grid.Row="1" Grid.Column="1" Grid.RowSpan="9" Style="{DynamicResource Students}"/>

                <Viewbox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="4">
                    <TextBlock Text="Добро пожаловать!"/>
                </Viewbox>

                <uc:TextBoxWithImageAndPlaceholder Placeholder="Логин*" Image="{DynamicResource Login}" x:Name="LoginBox"
                                                   Grid.Column="3" Grid.Row="3" FontSize="12" Grid.ColumnSpan="4"
                                                   Text="{Binding Login,Mode=TwoWay}" FontWeight="SemiBold"
                                                   BorderThickness="2">
                    <uc:TextBoxWithImageAndPlaceholder.Style>
                        <Style TargetType="uc:TextBoxWithImageAndPlaceholder">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LoginIsValid}" Value="True">
                                    <Setter Property="BorderBrush" Value="Lime"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LoginIsValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </uc:TextBoxWithImageAndPlaceholder.Style>
                </uc:TextBoxWithImageAndPlaceholder>

                <uc:PasswordBoxWithPasswordViewer Placeholder="Пароль*" x:Name="PassBox" Image="{DynamicResource Password}"
                                                  Grid.Column="3" Grid.Row="5" FontSize="12" Grid.ColumnSpan="4"
                                                  Text="{Binding Password,Mode=TwoWay}"
                                                  BorderThickness="2">
                    <uc:PasswordBoxWithPasswordViewer.Style>
                        <Style TargetType="uc:PasswordBoxWithPasswordViewer">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PasswordIsValid}" Value="True">
                                    <Setter Property="BorderBrush" Value="Lime"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PasswordIsValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </uc:PasswordBoxWithPasswordViewer.Style>
                </uc:PasswordBoxWithPasswordViewer>

                <Button Grid.Row="7" Grid.Column="3" Content="{Binding ButtonContent}" x:Name="AuthBtn" Grid.ColumnSpan="4" 
                        Command="{Binding Authorize}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModelIsValid}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="3" Grid.Row="9" Style="{DynamicResource ClickableText}" Command="{Binding MoveToRegistration}"
                        HorizontalContentAlignment="Left" VerticalContentAlignment="Center" ContentStringFormat="Регистрация →"/>

                <Button Grid.Column="6" Grid.Row="9" Style="{DynamicResource ClickableText}" Command="{Binding MoveToPasswordRecovery}"
                        HorizontalContentAlignment="Right" VerticalContentAlignment="Center" ContentStringFormat="Забыл пароль?"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
