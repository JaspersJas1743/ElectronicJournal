<UserControl x:Class="ElectronicJournal.Resources.UserControls.SvgWithChangeOfTheme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/" 
             mc:Ignorable="d" x:Name="ThisElement" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <svgc:SvgViewbox x:Name="LightThemeImage" Source="{Binding ElementName=ThisElement,Path=LightThemeSource}"
                         Visibility="{Binding LightThemeSourceVisiblity}"/>
        <svgc:SvgViewbox x:Name="DarkThemeImage" Source="{Binding ElementName=ThisElement,Path=DarkThemeSource}"
                         Visibility="{Binding DarkThemeSourceVisiblity}"/>
    </Grid>
</UserControl>
